<% layout('layouts/boilerplate') %>

<h1 class="page-title">Your Orders</h1>

<% if (orders.length === 0) { %>
    <p class="no-orders">No orders to display.</p>
<% } else { %>
    <div class="orders-container">
        <% orders.forEach(order => { %>
            <div class="order-card">
                <p class="total-amount">Total Amount: <span> <i class="fa-solid fa-indian-rupee-sign"></i> <%= order.totalAmount.toFixed(2) %></span></p>
                <h4>Products:</h4>
                <div class="products-list">
                    <% order.products.forEach(productItem => { %>
                        <div class="product-item">
                            <img src="<%= productItem.product.img %>" class="product-image" />
                            <div class="product-info">
                                <p><strong>Product Name:</strong> <%= productItem.product.name %></p>
                                <p><strong>Price:</strong> <i class="fa-solid fa-indian-rupee-sign"></i> <%= productItem.price %></p>
                                <p><strong>Quantity:</strong> <%= productItem.quantity %></p>
                                <p><strong>Date:</strong><%= productItem.orderDate.toDateString() %></p>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        <% }) %>
    </div>
<% } %>

<style>
/* General Page Styling */
body {
  font-family: 'Poppins', sans-serif;
  margin: 0;
  padding: 0;
  background: linear-gradient(135deg, #f3e5f5, #e1bee7);
  color: #333;
  overflow-x: hidden;
}

/* Page Title */
.page-title {
  text-align: center;
  font-size: 3rem;
  color: #7b1fa2;
  margin: 30px 0;
  letter-spacing: 1px;
  font-weight: bold;
  text-shadow: 0 3px 8px rgba(0, 0, 0, 0.2);
}

/* No Orders Message */
.no-orders {
  text-align: center;
  font-size: 1.5rem;
  color: #6d6d6d;
  margin-top: 50px;
}

/* Orders Container */
.orders-container {
  display: flex;
  flex-wrap: wrap;
  gap: 40px;
  justify-content: center;
  padding: 20px;
}

/* Order Card */
.order-card {
  background: #ffffff;
  border-radius: 15px;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
  width: 100%;
  max-width: 900px;
  padding: 20px;
  margin: 20px 0;
  transition: transform 0.3s, box-shadow 0.3s ease-in-out;
  animation: slideIn 0.5s ease-out;
}

.order-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
}

.order-card h3 {
  font-size: 1.5rem;
  color: #6a1b9a;
  margin-bottom: 10px;
}

.order-card .total-amount {
  font-size: 1.2rem;
  margin: 20px 0;
  color: #333;
}

.order-card .total-amount span {
  font-weight: bold;
  color: #d81b60;
}

/* Products List */
.products-list {
  display: flex;
  flex-direction: column;
  gap: 20px;
  margin-top: 15px;
}

/* Product Item */
.product-item {
  display: flex;
  align-items: center;
  gap: 20px;
  background: #f3f3f3;
  border-radius: 10px;
  padding: 15px;
  box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease, background-color 0.3s ease;
}

.product-item:hover {
  transform: translateY(-5px);
  background-color: #f8bbd0;
}

.product-image {
  width: 100px;
  height: 100px;
  object-fit: cover;
  border-radius: 10px;
  box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
}

.product-info {
  display: flex;
  flex-direction: column;
  gap: 5px;
  font-size: 1rem;
  color: #555;
}

.product-info p {
  margin: 0;
}

.product-info p strong {
  color: #7b1fa2;
}

/* Animations */
@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Responsive Design */
@media (max-width: 768px) {
  .order-card {
    width: 100%;
    padding: 15px;
  }

  .products-list {
    flex-direction: column;
    gap: 10px;
  }

  .product-item {
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .product-image {
    width: 80px;
    height: 80px;
  }
}
</style>
