<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-md-6 mx-auto">
        <form action="/products/<%=product._id%>/restock?_method=PATCH" class="validated-form" method="POST" novalidate>
            <h2>Restock Product: <%= product.name %></h2>
            
            <div class="mb-3">
                <label for="quantity" class="form-label">New Quantity :</label>
                <div class="input-group mb-3">
                    <input type="number" name="quantity" class="form-control" placeholder="Quantity" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>  
            </div>

            <button type="submit" class="btn btn-sm btn-success">Update Stock</button>
        </form>
    </div>
</div>